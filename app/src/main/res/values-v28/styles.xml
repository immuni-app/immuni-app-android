<resources>
    <!-- From API 28 we support colored shadows for cards -->
    <style name="CardShadowRed">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">@color/danger</item>
    </style>

    <style name="CardShadowWhite">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">#1A5751FF</item>
    </style>

    <style name="CardShadowColorPrimary">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
    </style>

    <style name="PrivacyCards">
        <item name="cardElevation">@dimen/cards_elevation</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
    </style>

    <style name="FAQCards">
        <item name="cardElevation">@dimen/cards_elevation</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:outlineSpotShadowColor">#08000000</item>
    </style>
</resources>