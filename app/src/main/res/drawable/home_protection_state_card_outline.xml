<!-- res/drawable/myrect.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#FFF">
<item>
    <selector>
        <item>
            <shape
                android:shape="rectangle">
                <solid android:color="#000000" />
                <corners android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp"
                    android:bottomLeftRadius="@dimen/card_radius" android:bottomRightRadius="@dimen/card_radius"/>
            </shape>
        </item>
    </selector>
</item>
</ripple>