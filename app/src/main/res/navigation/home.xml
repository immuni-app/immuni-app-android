<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.immuni.android.ui.home.home.HomeFragment"
        android:label="homeFragment"
        tools:layout="@layout/home_fragment"/>
    <dialog
        android:id="@+id/notificationsDialogFragment"
        android:name="org.immuni.android.ui.home.home.fragments.NotificationsDialogFragment"
        android:label="NotificationsDialogFragment"
        tools:layout="@layout/enable_notifications_dialog"/>
    <dialog
        android:id="@+id/notificationsExplanations"
        android:name="org.immuni.android.ui.home.home.fragments.NotificationsExplanationsFragment"
        android:label="notificationsExplanations"
        tools:layout="@layout/enable_notifications_explanations_dialog"/>
    <action
        android:id="@+id/action_notifications_dialog"
        app:destination="@id/notificationsDialogFragment"/>
    <action
        android:id="@+id/action_global_notificationsExplanations"
        app:destination="@id/notificationsExplanations"/>

</navigation>
